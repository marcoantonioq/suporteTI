{
    "productName": "SuporteTI",
    "appId": "ifg.edu.suporteTI",
    "artifactName": "${productName}-instalador.${ext}",
    "directories": {
        "output": "builds/",
        "buildResources": "resources"
    },
    "extraResources": [],
    "files": [
        "app/**/*",
        "index.js",
        "node_modules/**/*",
        "package.json"
    ],
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    },
    "mac": {
        "icon": "app/render/static/icon.ico"
    },
    "win": {
        "icon": "app/render/static/icon.ico",
        "publish": {
            "provider": "github"
        }
    },
    "linux": {
        "icon": "app/render/static/icon.png"
    }
}