{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "DOM", "es2019" ],
        "module": "es6",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,          
        "target": "es5",
        "typeRoots": [ "./node_modules/@types", "./app/types" ]
    },
    "include": ["app"],
    "exclude": ["node_modules","electron", "public"]
}
